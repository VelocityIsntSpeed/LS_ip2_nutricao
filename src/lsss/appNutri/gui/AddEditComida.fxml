<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane headerText="Adicionar Comida" prefWidth="250.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <content>
      <VBox spacing="5.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Nome" />
                  <TextField fx:id="txtFieldNome" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="Valor energético (kcal)" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtFieldValEnergetico" maxWidth="50.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="Proteína (g)" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtFieldProteina" maxWidth="50.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="Carboidratos (g)" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtFieldCarboidratos" maxWidth="50.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
